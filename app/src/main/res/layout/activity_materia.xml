<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantalla_pizarra"
    android:scrollbarSize="24dp"
    tools:context=".Materia">

    <TextView
        android:id="@+id/nombreMateriaOpciones"
        android:layout_width="235dp"
        android:layout_height="76dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="118dp"
        android:background="#D8D2D2"
        android:fontFamily="cursive"
        android:gravity="center"
        android:shadowColor="@color/material_dynamic_neutral20"
        android:text="hola"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/clasesOnLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clasesOnLine"
        android:layout_width="132dp"
        android:layout_height="0dp"
        android:layout_marginBottom="395dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreMateriaOpciones" />

    <Button
        android:id="@+id/alInicioDeseMateria"
        android:layout_width="54dp"
        android:layout_height="40dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>